{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "ignoreDeprecations": "5.0",
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext", "ES2022"],
    "module": "Node16",
    "moduleResolution": "node16",
    "noEmit": false,
    "outDir": "./dist",
    "plugins": [{ "name": "next" }],
    "resolveJsonModule": true,
    "rootDir": "../..",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "types": ["jest", "node"],
    "paths": {
      "@dashboard": ["./src"],
      "@dashboard/*": ["./src/*"],
      "@nia/prism": ["../../packages/prism/dist"],
      "@nia/prism/*": ["../../packages/prism/dist/*"],
      "@nia/features": ["../../packages/features/src"],
      "@nia/features/*": ["../../packages/features/src/*"]
    },
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types",
      "./src/declarations.d.ts",
      "./node_modules/next-auth/src/core/types"
    ]
  },
  "include": [
    "../../packages/features/src/**/*.ts",
    "../../packages/prism/dist/**/*.d.ts",
    "../../packages/features/generated/**/*.json",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
, "../../packages/prism/src/core/platform-definitions/LinkMapDefinition.ts"  ],
  "exclude": ["node_modules", "dist", ".next", "src/migration/**/*", "__tests__/*.ts"]
}
