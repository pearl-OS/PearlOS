# Environment Configuration for Mesh Server

# Database Connection
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nia
POSTGRES_SSL=false

# Server Configuration
PORT=5000
NODE_ENV=development

# Caching
CACHE_TTL=5_000               # Default cache time-to-live in seconds (5 seconds)
CACHE_TENANT_TTL=30_000        # Default tenant cache time-to-live in seconds (30 seconds)
CACHE_DEFINITIONS_TTL=60_000   # Default content definitions cache time-to-live in seconds (60 seconds)
# Set CACHE_TTL=0 to disable caching entirely

# Logging
LOG_LEVEL=info
DEBUG=mesh:*
