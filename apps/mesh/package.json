{
  "name": "@nia/mesh-server",
  "version": "0.1.0",
  "description": "Standalone GraphQL Mesh Server for Nia Universal",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && node scripts/copy-config.js",
    "start": "node dist/server.js",
    "start:dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only --ignore-watch node_modules --ignore-watch dist --ignore-watch '.*\\.test\\.ts$' --ignore-watch '.*\\.spec\\.ts$' --ignore-watch '__tests__' src/server.ts",
    "start:dev:no-watch": "cross-env NODE_ENV=development ts-node --transpile-only src/server.ts",
    "start:prod": "cross-env NODE_ENV=production ts-node-dev --respawn --transpile-only src/server.ts",
    "start:test": "cross-env NODE_ENV=test ts-node-dev --respawn --transpile-only src/server.ts",
    "dev": "npm run start:dev",
    "test": "cross-env NODE_ENV=test jest --config ../../jest.config.mjs apps/mesh/__tests__",
    "db:archive": "ts-node scripts/archive-db.ts",
    "db:restore": "ts-node scripts/restore-db.ts",
    "db:clear": "ts-node scripts/clear-db.ts",
    "db:update-ui-config": "ts-node scripts/aws-update-uiconfig.ts",
    "clean": "rm -rf .next node_modules dist"
  },
  "dependencies": {
    "@graphql-tools/schema": "^10.0.3",
    "@graphql-tools/utils": "^10.0.15",
    "@keyv/redis": "^5.1.0",
    "@nia/prism": "*",
    "@types/jsonwebtoken": "^9.0.10",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "graphql": "^16.8.1",
    "graphql-yoga": "^5.2.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.3",
    "keyv": "^5.5.0",
    "node-cache": "^5.1.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "pg-mem": "^3.0.5",
    "redis": "^5.8.0",
    "sequelize": "^6.35.2",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.25",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  },
  "overrides": {
    "qs": "6.14.1"
  }
}
