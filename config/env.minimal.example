# ============================================================
# Nia Universal - Local Development Configuration
# ============================================================
# This file is used as a template by the setup script.
# 
# REQUIRED values must be set for the platform to work.
# OPTIONAL values can be left commented for basic local dev.
#
# Run ./setup.sh to auto-generate secrets and create .env.local
# ============================================================

# ============================================================
# DATABASE (Required - Local PostgreSQL)
# ============================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=testdb
POSTGRES_DATABASE=testdb

# ============================================================
# AUTHENTICATION SECRETS (Required - Auto-generated by setup)
# ============================================================
# These are auto-generated during setup with: openssl rand -base64 32
NEXTAUTH_SECRET=__NEXTAUTH_SECRET_PLACEHOLDER__
TOKEN_ENCRYPTION_KEY=__TOKEN_ENCRYPTION_KEY_PLACEHOLDER__

# Auth URLs
NEXTAUTH_INTERFACE_URL=http://localhost:3000
NEXTAUTH_DASHBOARD_URL=http://localhost:4000

# ============================================================
# MESH API (Required - Local GraphQL server)
# ============================================================
MESH_ENDPOINT=http://localhost:2000/graphql
MESH_API_ENDPOINT=http://localhost:2000/api
NEXT_PUBLIC_MESH_ENDPOINT=http://localhost:2000/graphql
MESH_SHARED_SECRET=__MESH_SHARED_SECRET_PLACEHOLDER__

# ============================================================
# LOCAL DEVELOPMENT FLAGS
# ============================================================
NODE_ENV=development
DISABLE_DASHBOARD_AUTH=true
NEXT_PUBLIC_TEST_ANONYMOUS_USER=true

# Disable cloud services for local dev
USE_REDIS=false
EMAIL_REQUIRE_SES=false
EMAIL_FORCE_SES=false
EMAIL_FROM=noreply@localhost

# ============================================================
# INTERFACE SETTINGS
# ============================================================
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_INTERFACE_BASE_URL=http://localhost:3000
INTERFACE_BASE_URL=http://localhost:3000
NEXT_PUBLIC_PASSWORD_PROTECTION=false

# ============================================================
# DAILY.CO - WebRTC Voice/Video (Required for voice features)
# ============================================================
# Get your API key at: https://www.daily.co/
# The room URL is a pre-created Daily room for local testing
DAILY_API_KEY=__DAILY_API_KEY_PLACEHOLDER__
DAILY_DOMAIN=pearlos.daily.co
NEXT_PUBLIC_DAILY_ROOM_URL="https://pearlos.daily.co/sUdXUVtuT0HFbSQRvdsE"
DAILY_ROOM_URL="https://pearlos.daily.co/sUdXUVtuT0HFbSQRvdsE"
NEXT_PUBLIC_BOT_AUTO_JOIN=true
MUTE_LIBWEBRTC_LOGS=true

# ============================================================
# BOT CONTROL (Pipecat voice bot)
# ============================================================
BOT_CONTROL_BASE_URL=http://localhost:4444
NEXT_PUBLIC_BOT_CONTROL_BASE_URL=http://localhost:4444
BOT_CONTROL_SHARED_SECRET=__BOT_CONTROL_SHARED_SECRET_PLACEHOLDER__
BOT_CONTROL_AUTH_REQUIRED=1

# ============================================================
# TTS PROVIDER (Text-to-Speech)
# ============================================================
# Default: Kokoro/Chorus (local, free) - just run: npm run chorus:start
# Set USE_ELEVENLABS=true to use ElevenLabs instead

# Kokoro TTS (local)
KOKORO_TTS_BASE_URL=ws://127.0.0.1:8000
KOKORO_TTS_API_KEY=test-key
KOKORO_TTS_VOICE_ID=af_heart

# ElevenLabs (cloud - optional)
# USE_ELEVENLABS=true
# ELEVENLABS_API_KEY=__ELEVENLABS_API_KEY_PLACEHOLDER__
# ELEVENLABS_VOICE_ID=kdmDKE6EkgrWrrykO9Qt

# ============================================================
# AI PROVIDERS (Required for AI features)
# ============================================================
# OpenAI - Primary AI provider
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=__OPENAI_API_KEY_PLACEHOLDER__

# Deepgram - Speech-to-text transcription
# Get your key at: https://console.deepgram.com/
DEEPGRAM_API_KEY=__DEEPGRAM_API_KEY_PLACEHOLDER__

# Alternative AI providers (optional)
# ANTHROPIC_API_KEY=__ANTHROPIC_API_KEY_PLACEHOLDER__
# GEMINI_API_KEY=__GEMINI_API_KEY_PLACEHOLDER__
# GROQ_API_KEY=__GROQ_API_KEY_PLACEHOLDER__
# GROQ_API_KEY_SECONDARY=__GROQ_API_KEY_SECONDARY_PLACEHOLDER__

# ============================================================
# YOUTUBE API (Optional - for video features)
# ============================================================
# YOUTUBE_API_KEY=__YOUTUBE_API_KEY_PLACEHOLDER__

# ============================================================
# GOOGLE OAUTH (Optional - for Google sign-in)
# ============================================================
# Create credentials at: https://console.cloud.google.com/apis/credentials
# GOOGLE_INTERFACE_CLIENT_ID=__GOOGLE_INTERFACE_CLIENT_ID_PLACEHOLDER__
# GOOGLE_INTERFACE_CLIENT_SECRET=__GOOGLE_INTERFACE_CLIENT_SECRET_PLACEHOLDER__
# GOOGLE_DASHBOARD_CLIENT_ID=__GOOGLE_DASHBOARD_CLIENT_ID_PLACEHOLDER__
# GOOGLE_DASHBOARD_CLIENT_SECRET=__GOOGLE_DASHBOARD_CLIENT_SECRET_PLACEHOLDER__

# ============================================================
# REDIS (Optional - for caching/sessions)
# ============================================================
# USE_REDIS=true
# REDIS_URL=redis://localhost:6379
# REDIS_SHARED_SECRET=__REDIS_SHARED_SECRET_PLACEHOLDER__
# REDIS_AUTH_REQUIRED=false

# ============================================================
# SPRITES / COMFYUI (Optional - for avatar generation)
# ============================================================
# SPRITE_AUTOGEN_ENABLED=false
# COMFYUI_BASE_URL=
# COMFYUI_ANIMATION_BASE_URL=
# OLLAMA_BASE_URL=
# OLLAMA_MODEL=llama3.2

# ============================================================
# ANALYTICS (Optional)
# ============================================================
# NEXT_PUBLIC_POSTHOG_KEY=
# NEXT_PUBLIC_POSTHOG_PROXY_HOST=

# ============================================================
# DEBUGGING FLAGS (All default to false)
# ============================================================
DEBUG_CACHE=false
DEBUG_TEST=false
DEBUG_PRISM=false
DEBUG_MESH=false
DEBUG_DAILYCALL=false
DEBUG_SPEECH_CONTEXT=false
DEBUG_PROVIDER_MESSAGES=false
DEBUG_FUNCTIONAL_PROMPTS=false
NEXT_PUBLIC_DEBUG_DAILYCALL=false
NEXT_PUBLIC_DEBUG_DAILYCALL_CONN=false
PERF_MONITOR=false
PERF_LOG=0
LOG_LEVEL=info

# ============================================================
# ENCRYPTION
# ============================================================
FORCE_ENCRYPTION=true
RESET_TOKEN_PERSISTENCE=enabled

