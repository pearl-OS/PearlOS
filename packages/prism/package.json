{
  "name": "@nia/prism",
  "version": "1.0.0",
  "private": true,
  "description": "Nia Data Prism - Universal data abstraction layer for third-party integrations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core/*": {
      "import": "./dist/core/*",
      "require": "./dist/core/*",
      "types": "./dist/core/*.d.ts"
    },
    "./core/css/*": {
      "import": "./dist/core/css/*",
      "require": "./dist/core/css/*"
    },
    "./core/actions": {
      "import": "./dist/core/actions/index.js",
      "require": "./dist/core/actions/index.js",
      "types": "./dist/core/actions/index.d.ts"
    },
    "./core/actions/*": {
      "import": "./dist/core/actions/*.js",
      "require": "./dist/core/actions/*.js",
      "types": "./dist/core/actions/*.d.ts"
    },
    "./core/auth": {
      "import": "./dist/core/auth/index.js",
      "require": "./dist/core/auth/index.js",
      "types": "./dist/core/auth/index.d.ts"
    },
    "./core/blocks": {
      "import": "./dist/core/blocks/index.js",
      "require": "./dist/core/blocks/index.js",
      "types": "./dist/core/blocks/index.d.ts"
    },
    "./core/blocks/*": {
      "import": "./dist/core/blocks/*.js",
      "require": "./dist/core/blocks/*.js",
      "types": "./dist/core/blocks/*.d.ts"
    },
    "./core/components": {
      "import": "./dist/core/components/index.js",
      "require": "./dist/core/components/index.js",
      "types": "./dist/core/components/index.d.ts"
    },
    "./core/config": {
      "import": "./dist/core/config/index.js",
      "require": "./dist/core/config/index.js",
      "types": "./dist/core/config/index.d.ts"
    },
    "./core/config/env-loader": {
      "import": "./dist/core/config/env-loader.js",
      "require": "./dist/core/config/env-loader.js",
      "types": "./dist/core/config/env-loader.d.ts"
    },
    "./core/content": {
      "import": "./dist/core/content/index.js",
      "require": "./dist/core/content/index.js",
      "types": "./dist/core/content/index.d.ts"
    },
    "./core/hooks": {
      "import": "./dist/core/hooks/index.js",
      "require": "./dist/core/hooks/index.js",
      "types": "./dist/core/hooks/index.d.ts"
    },
    "./core/oauth": {
      "import": "./dist/core/oauth/index.js",
      "require": "./dist/core/oauth/index.js",
      "types": "./dist/core/oauth/index.d.ts"
    },
    "./core/routes": {
      "import": "./dist/core/routes/index.js",
      "require": "./dist/core/routes/index.js",
      "types": "./dist/core/routes/index.d.ts"
    },
    "./core/services": {
      "import": "./dist/core/services/index.js",
      "require": "./dist/core/services/index.js",
      "types": "./dist/core/services/index.d.ts"
    },
    "./core/utils": {
      "import": "./dist/core/utils/index.js",
      "require": "./dist/core/utils/index.js",
      "types": "./dist/core/utils/index.d.ts"
    },
    "./core/utils/platform-definitions": {
      "import": "./dist/core/utils/platform-definitions.js",
      "require": "./dist/core/utils/platform-definitions.js",
      "types": "./dist/core/utils/platform-definitions.d.ts"
    },
    "./testing": {
      "import": "./dist/testing/index.js",
      "require": "./dist/testing/index.js",
      "types": "./dist/testing/index.d.ts"
    },
    "./*": {
      "import": "./dist/*",
      "require": "./dist/*",
      "types": "./dist/*.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json && node scripts/copy-css.js",
    "build:server": "tsc -p ./tsconfig.server.json",
    "build:types": "tsc -p ./tsconfig.build.json --emitDeclarationOnly",
    "clean": "rm -rf dist node_modules",
    "test": "jest --maxWorkers=4 --config ../../jest.config.mjs packages/prism/__tests__"
  },
  "dependencies": {
    "@astrojs/compiler": "^2.12.2",
    "@aws-sdk/client-ses": "^3.864.0",
    "@graphql-mesh/cache-file": "^0.104.6",
    "@graphql-mesh/cli": "^0.100.7",
    "@graphql-mesh/compose-cli": "^1.4.11",
    "@graphql-mesh/config": "^0.108.7",
    "@graphql-mesh/graphql": "^0.104.6",
    "@graphql-mesh/openapi": "^0.109.13",
    "@graphql-mesh/plugin-response-cache": "^0.104.7",
    "@graphql-mesh/runtime": "^0.106.6",
    "@graphql-tools/code-file-loader": "^8.1.22",
    "@graphql-tools/graphql-tag-pluck": "^8.3.21",
    "@graphql-tools/schema": "^10.0.25",
    "@types/express": "^4.17.23",
    "@vue/compiler-sfc": "^3.5.17",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.0.0",
    "content-tag": "^4.0.0",
    "diff": "^8.0.2",
    "dotenv": "^16.3.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "graphql": "^16.8.0",
    "graphql-request": "^6.1.0",
    "graphql-subscriptions": "^3.0.0",
    "jose": "^5.0.0",
    "mesh": "^7.0.3",
    "next": "^15.3.3",
    "next-auth": "^4.24.0",
    "nodemailer": "^6.9.15",
    "pg": "^8.11.0",
    "pg-mem": "^2.9.0",
    "sequelize": "^6.35.0",
    "sequelize-typescript": "^2.1.6",
    "svelte2tsx": "^0.7.41",
    "tailwind-merge": "^2.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.25.20"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.10.0",
    "@types/react": "^18",
    "@types/uuid": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29",
    "ts-jest": "^29.3.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
